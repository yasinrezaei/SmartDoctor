<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_weight="1">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:layout_weight="0.7"
        android:background="@drawable/bg_white_button">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/headerTxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:text="ویرایش اطلاعات"
                android:textStyle="bold"
                android:textSize="20dp"
                android:layout_marginTop="20dp"
                android:textColor="@color/black"/>
            <EditText
                android:id="@+id/edtFullName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:ems="10"
                android:gravity="right"
                app:layout_constraintTop_toBottomOf="@id/headerTxt"
                app:layout_constraintLeft_toLeftOf="@id/headerTxt"
                app:layout_constraintRight_toRightOf="@id/headerTxt"
                android:hint="نام و نام خانوادگی"
                android:background="@drawable/bg_circle_white"
                android:padding="10dp"/>
            <EditText
                android:id="@+id/edtNationalCode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:ems="10"
                android:gravity="right"
                app:layout_constraintTop_toBottomOf="@id/edtFullName"
                app:layout_constraintLeft_toLeftOf="@id/edtFullName"
                app:layout_constraintRight_toRightOf="@id/edtFullName"
                android:hint="کد ملی"
                android:background="@drawable/bg_circle_white"
                android:padding="10dp"/>
            <EditText
                android:id="@+id/edtAge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="10"
                android:gravity="right"
                android:inputType="number"
                android:layout_marginTop="20dp"
                app:layout_constraintTop_toBottomOf="@id/edtNationalCode"
                app:layout_constraintRight_toRightOf="@id/edtNationalCode"
                app:layout_constraintLeft_toLeftOf="@id/edtNationalCode"
                android:hint="سن"
                android:background="@drawable/bg_circle_white"
                android:padding="10dp"/>
            <LinearLayout
                android:id="@+id/editCityLinear"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/edtAge"
                app:layout_constraintRight_toRightOf="@id/edtAge"
                app:layout_constraintLeft_toLeftOf="@id/edtAge"
                android:orientation="horizontal"
                android:weightSum="4">
                <ImageView
                    android:id="@+id/editCityBtn"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:src="@drawable/ic_baseline_edit_location_alt_24"
                    android:layout_weight="1"
                    android:layout_marginTop="20dp"
                    />
                <EditText
                    android:id="@+id/edtCity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/bg_circle_white"
                    android:ems="10"
                    android:hint="شهر"
                    android:padding="10dp"
                    android:inputType="none"
                    android:layout_weight="3"
                    android:editable="false"/>

            </LinearLayout>


            <EditText
                android:id="@+id/edtAddress"
                android:layout_width="wrap_content"
                android:layout_height="100dp"
                android:ems="10"
                android:gravity="right"
                android:layout_marginTop="20dp"
                app:layout_constraintTop_toBottomOf="@id/editCityLinear"
                app:layout_constraintRight_toRightOf="@id/editCityLinear"
                app:layout_constraintLeft_toLeftOf="@id/editCityLinear"
                android:hint="آدرس"
                android:background="@drawable/bg_circle_white"
                android:padding="10dp"/>

            <TextView
                android:id="@+id/txtGender"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="انتخاب جنسیت"
                app:layout_constraintEnd_toEndOf="@+id/edtAddress"
                app:layout_constraintStart_toStartOf="@+id/edtAddress"
                app:layout_constraintTop_toBottomOf="@+id/edtAddress"/>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/editProfileBtn"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                app:layout_constraintEnd_toEndOf="@+id/edtAddress"
                app:layout_constraintStart_toStartOf="@+id/edtAddress"
                app:layout_constraintTop_toBottomOf="@+id/txtGender"
                android:background="@drawable/bg_login_btn"
                android:text="ویرایش"
                />
            <View
                android:id="@+id/bottomView"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_marginTop="20dp"
                app:layout_constraintEnd_toEndOf="@+id/editProfileBtn"
                app:layout_constraintStart_toStartOf="@+id/editProfileBtn"
                app:layout_constraintTop_toBottomOf="@+id/editProfileBtn"
                android:text="ویرایش"

                />


        </androidx.constraintlayout.widget.ConstraintLayout>
    </LinearLayout>

</LinearLayout>